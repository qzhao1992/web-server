<html>
    <head>
        <% include ../partials/header %>
        <title>Login Page</title>
        <link rel="stylesheet" href="/public/css/extra.css">
    </head>
    <body  background="/public/images/background.jpg">
        <div  class="card rounded-40" style="width: 30rem; height: 20rem;"> 
            
            <form action='/schedule' method='post'>
                
                <div class="d-flex  card-body container  justify-content-center">
                    <div class="row justify-content-center">
                        <div class="justify-content-center">
                                <h2 class="align-middle">Welcome back</h2>
                        </div>
                        <div class="form-group w-100 align-middle">
                            <input type="email" name="email" class="form-control w-100" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group w-100">
                            <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <br>
                        <br>
                        <br>
                        <div class="form-group w-100">
                            <button type="submit" class="w-100 btn btn-primary">Submit</button>
                        </div>    
                    </div>
                                 
                </div>
                
            </form>
        </div>
    </body>
</html>